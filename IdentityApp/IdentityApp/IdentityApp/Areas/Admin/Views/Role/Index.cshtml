@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>
<div class="row col-12 mb-3">
    <a href="javascripts:void(0);"
       class="btn btn-dark mb-2"
       onclick="role.openAddEditModal()"><i class="fa fa-plus"> Create New Role</i></a>
</div>

<div class="row">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>#ID</th>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tbRoles">
        </tbody>
    </table>
</div>

<!-- The Modal -->
<div class="modal" id="addEditModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="frmAddEditRole">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Create New Role</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <p id="message" class="alert alert-danger"></p>
                    <input type="text" class="form-control" id="RoleKey" name="RoleKey" hidden />
                    <div class="row form-group">
                        <div class="col-3 col-md-4">
                            <label class="float-right">Role Name</label>
                        </div>
                        <div class="col-9 col-md-8">
                            <input type="text" class="form-control" id="RoleName" name="RoleName"
                                   data-rule-required="true" />
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a href="javascripts:void(0);"
                       class="btn btn-outline-info"
                       onclick="role.save()">Save</a>
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section css{
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/admin/role/role.js"></script>
}

