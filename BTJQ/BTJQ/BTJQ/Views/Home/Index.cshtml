@{
    ViewData["Title"] = "Home Page";
}

<h1>Student</h1>
<div>
    <a href="javascripts:void(0);"
       class="btn btn-outline-success"
       onclick="student.openAddEditModal()">Create New</a>
</div>
<div class="row">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>#ID</th>
                <th>Fullname</th>
                <th>Sex</th>
                <th>DOB</th>
                <th>Class Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tbStudent">
        </tbody>
    </table>
</div>

<!-- The Modal -->
<div class="modal" id="addEditModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="frmAddEditStudent">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Create new student</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input hidden id="StudentId" name="StudentId" value="0" />
                    <div class="row form-group">
                        <div class="col-3 col-md-4">
                            <label class="float-right">Fullname</label>
                        </div>
                        <div class="col-9 col-md-8">
                            <input type="text" class="form-control" id="Fullname" name="Fullname"
                                   data-rule-required="true"
                                   data-msg-required="Đây là trường bắt buộc." />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-3 col-md-4">
                            <label class="float-right">Sex</label>
                        </div>
                        <div class="col-9 col-md-8">
                            <select class="form-control" id="Sex" name="Sex"></select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-3 col-md-4">
                            <label class="float-right">DOB</label>
                        </div>
                        <div class="col-9 col-md-8">
                            <input type="date"
                                   class="form-control" id="DOB" name="DOB" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-3 col-md-4">
                            <label class="float-right">Class Name</label>
                        </div>
                        <div class="col-9 col-md-8">
                            <select class="form-control" id="ClassName" name="ClassName">
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a href="javascripts:void(0);"
                       class="btn btn-outline-info"
                       onclick="student.save()">Save</a>
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section css{
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/lib/datepicker/datepicker.css" rel="stylesheet" />*@
}


@section Scripts{
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @*<script src="~/lib/datepicker/datepicker.js"></script>*@
    <script src="~/js/home/home.js"></script>
}
